{
    "name": "mf/collections-php",
    "description": "Collections for PHP - It's basically a syntax sugar over classic array structure, which allows you to use it as classic array, but adds some cool features.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Petr Chromec",
            "email": "mortal_flesh@seznam.cz"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.0",
        "mf/type-validator": "^4.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.25",
        "friendsofphp/php-cs-fixer": "dev-feature/fix-union-types-in-phpdocs as 3.8.0",
        "lmc/coding-standard": "dev-feature/add-fixers-for-php8",
        "mockery/mockery": "^1.4",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.0",
        "symplify/easy-coding-standard": "dev-feature/use-dev-version-of-php-cs-fixer as 10.1.4"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MortalFlesh/PHP-CS-Fixer"
        },
        {
            "type": "vcs",
            "url": "https://github.com/MortalFlesh/easy-coding-standard"
        },
        {
            "type": "vcs",
            "url": "https://github.com/MortalFlesh/php-coding-standard"
        }
    ],
    "autoload": {
        "psr-4": {
            "MF\\Collection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\Collection\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "all": [
            "@lint",
            "@analyze",
            "@tests-ci"
        ],
        "analyze": [
            "@cs",
            "vendor/bin/ecs check-markdown README.md --ansi",
            "@phpstan"
        ],
        "cs": "vendor/bin/ecs check --ansi -- src/ tests/ ecs.php",
        "fix": [
            "@composer normalize",
            "vendor/bin/ecs check --ansi --clear-cache --fix -- src/ tests/ ecs.php"
        ],
        "lint": [
            "vendor/bin/parallel-lint -j 10 -e php ./src ./tests ecs.php",
            "@composer validate",
            "@composer normalize --dry-run"
        ],
        "phpstan": "vendor/bin/phpstan analyze src tests -c phpstan.neon --ansi --level 8 --memory-limit=-1",
        "tests": "vendor/bin/phpunit",
        "tests-ci": "php -dxdebug.coverage_enable=1 vendor/bin/phpunit -c phpunit.xml.dist --exclude-group local"
    }
}
